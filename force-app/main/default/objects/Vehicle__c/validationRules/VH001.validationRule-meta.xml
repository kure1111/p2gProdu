<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VH001</fullName>
    <active>true</active>
    <description>Debe de ser un valor Numérico</description>
    <errorConditionFormula>AND(
NOT(ISBLANK(Prima_Seguro__c)),

NOT(REGEX(Prima_Seguro__c, &quot;^[0-9]+$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Prima_Seguro__c</errorDisplayField>
    <errorMessage>VH001 - El valor de Prima Seguro debe de ser un valor Numérico.</errorMessage>
</ValidationRule>
